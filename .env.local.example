# Environment Variables for Vercel Deployment
# Copy this file to .env.local for local development
# Add these variables to your Vercel project settings for deployment

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/adhiron-pharma

# NextAuth Configuration
# For local development:
NEXTAUTH_URL=http://localhost:3000
# For production (update after first deployment):
# NEXTAUTH_URL=https://your-vercel-deployment-url.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-key

# OAuth Providers (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys (if using)
OPENAI_API_KEY=your-openai-api-key